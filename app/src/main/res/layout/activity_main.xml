<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/quickPrintC"
        android:layout_width="125dp"
        android:layout_height="91dp"
        android:layout_marginStart="28dp"
        android:text="550"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/quickPrintA"
        app:layout_constraintStart_toEndOf="@+id/quickPrintB" />

    <Button
        android:id="@+id/quickPrintD"
        android:layout_width="125dp"
        android:layout_height="91dp"
        android:layout_marginStart="28dp"
        android:text="1000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/quickPrintA"
        app:layout_constraintStart_toEndOf="@+id/quickPrintC" />

    <Button
        android:id="@+id/noThree"
        android:layout_width="122dp"
        android:layout_height="120dp"
        android:layout_marginStart="40dp"
        android:text="3"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/noTwo"
        app:layout_constraintTop_toTopOf="@+id/noTwo" />

    <Button
        android:id="@+id/noZero"
        android:layout_width="122dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="@+id/noOne"
        app:layout_constraintTop_toBottomOf="@+id/noOne" />

    <Button
        android:id="@+id/noTwo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="52dp"
        android:text="2"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/noOne"
        app:layout_constraintTop_toTopOf="@+id/noOne" />

    <Button
        android:id="@+id/noOne"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="48dp"
        android:text="1"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="@+id/noFour"
        app:layout_constraintTop_toBottomOf="@+id/noFour" />

    <Button
        android:id="@+id/noSeven"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="276dp"
        android:text="7"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/noEight"
        android:layout_width="113dp"
        android:layout_height="118dp"
        android:layout_marginStart="44dp"
        android:text="8"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/noSeven"
        app:layout_constraintTop_toTopOf="@+id/noSeven" />

    <Button
        android:id="@+id/noNine"
        android:layout_width="123dp"
        android:layout_height="112dp"
        android:layout_marginStart="56dp"
        android:text="9"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/noEight"
        app:layout_constraintTop_toTopOf="@+id/noEight" />

    <Button
        android:id="@+id/noFive"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="44dp"
        android:text="5"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/noFour"
        app:layout_constraintTop_toTopOf="@+id/noFour" />

    <Button
        android:id="@+id/noSix"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="48dp"
        android:text="6"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/noFive"
        app:layout_constraintTop_toTopOf="@+id/noFive" />

    <Button
        android:id="@+id/noFour"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:text="4"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="@+id/noSeven"
        app:layout_constraintTop_toBottomOf="@+id/noSeven" />

    <TextView
        android:id="@+id/viewPrice"
        android:layout_width="340dp"
        android:layout_height="111dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:text="0"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="80sp"
        app:layout_constraintStart_toStartOf="@+id/buttonErase"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonErase"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="166dp"
        android:layout_height="108dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="56dp"
        android:background="@color/colorAccent"
        android:text="Xoa"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/noSeven"
        app:layout_constraintTop_toTopOf="@+id/noSeven" />

    <Button
        android:id="@+id/buttonPrintReciept"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="261dp"
        android:layout_height="108dp"
        android:layout_marginStart="68dp"
        android:background="@color/colorPrimary"
        android:text="In hoa don"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/noZero"
        app:layout_constraintTop_toTopOf="@+id/noZero" />

    <Button
        android:id="@+id/customPriceButton"
        android:layout_width="151dp"
        android:layout_height="101dp"
        android:layout_marginBottom="8dp"
        android:text="Trang trÃ­"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/noZero"
        app:layout_constraintStart_toStartOf="@+id/buttonErase" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="159dp"
        android:layout_height="98dp"
        android:layout_marginBottom="32dp"
        android:text="+"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/customPriceButton"
        app:layout_constraintStart_toStartOf="@+id/buttonErase" />

    <Button
        android:id="@+id/halfPriceButton"
        android:layout_width="159dp"
        android:layout_height="98dp"
        android:layout_marginBottom="32dp"
        android:text="50%"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/plusButton"
        app:layout_constraintStart_toStartOf="@+id/buttonErase" />

    <TextView
        android:id="@+id/viewCalcOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/viewPrice"
        app:layout_constraintStart_toStartOf="@+id/viewPrice" />

    <Button
        android:id="@+id/quickPrintA"
        android:layout_width="117dp"
        android:layout_height="91dp"
        android:layout_marginBottom="76dp"
        android:text="340"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/customPriceButton" />

    <Button
        android:id="@+id/quickPrintB"
        android:layout_width="125dp"
        android:layout_height="91dp"
        android:layout_marginStart="28dp"
        android:text="450"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/quickPrintA"
        app:layout_constraintStart_toEndOf="@+id/quickPrintA" />

</androidx.constraintlayout.widget.ConstraintLayout>